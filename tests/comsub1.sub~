: $(echo \;)

: $(case a in a) echo ;;# comment
esac)

: $(case a in a) echo ;; # comment
esac)

: $(: \;# not a comment )

: $(: \ # not a comment)

echo $(case a in a) echo \#esac ;;
esac)

: $(case a in a) : ;#esac ;;
esac)

: $(case a in a) : ;#esac comment )
esac)

: $(case a in a) : ;
esac)

echo $(#comment )
echo a)
