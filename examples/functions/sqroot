#Here is how to calculate the (integer part of the) square root
#of a number in a much cleaner way.

sqroot()
{
	let arg=$1
	let root=arg
	while :
	do
		newroot=$(( (root+arg/root)/2 ))
		(( newroot == root )) && { echo $root; return; }
		let root=newroot
	done
}

sqroot "$@"
